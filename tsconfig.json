{
	"compilerOptions": {
		"lib": ["ESNext"],
		"sourceMap": true,
		"module": "commonjs",
		"target": "esnext",
		"outDir": "dist",
		"sourceRoot": "src",
		"moduleResolution": "node",
		"composite": true,
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": false,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false
	},
	"include": ["src/**/*"]
}
